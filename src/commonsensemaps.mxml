				map.addEventListener(MapEvent.STOP_ZOOMING, dispatchUpdated);
				map.addEventListener(CSEvent.PAN_AND_ZOOM_COMPLETE, dispatchUpdated);
				
				this.addEventListener(ResizeEvent.RESIZE,onResize);
				
				//Listener for zoom and pan
